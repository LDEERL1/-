<!-- StartWindow.xaml -->
<Window x:Class="HangmanGame.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Виселица" Height="700" Width="800" Background="Red" BorderBrush="Red">
    <Grid>
        <Image Source="pack://application:,,,/Images/fon.jpg" Stretch="Fill"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="520" Height="244">
            <TextBlock Text="Добро пожаловать на испытание!" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Margin="0,0,0,10" Foreground="#FFBBABAB" FontFamily="Microsoft JhengHei"/>
            <TextBlock Text="От этого зависит не ваша жизнь, к сожалению" HorizontalAlignment="Center" FontSize="10" Margin="0,0,0,10" Foreground="#FF565454" FontFamily="Times New Roman"/>
            <TextBlock Text="Передайте жертве свое имя напоследок:" HorizontalAlignment="Center" FontSize="22" Margin="0,0,0,10" Foreground="Red"/>
            <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Начать" Foreground="Black" Background="#FF800808" FontWeight="Bold" Height="75" FontSize="25" Click="Button_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
